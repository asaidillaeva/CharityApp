<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"

    android:gravity="center"
    tools:context=".ui.application.ApplicationFragment">


    <LinearLayout
        android:id="@+id/application_needy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="@dimen/text_margin"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/custom_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/application_for_needies"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title" />


        <EditText
            android:padding="4dp"
            android:id="@+id/needy_fullname"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Full Name"
            android:textSize="@dimen/text_size"
            />
        <EditText
            android:id="@+id/needy_address"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Address"
            android:textSize="@dimen/text_size"
            />
        <EditText
            android:id="@+id/needy_needs"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Need"
            android:textSize="@dimen/text_size"
            />

        <EditText
            android:id="@+id/needy_mobile"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="phone"
            android:maxLines="1"
            android:hint="Mobile number"
            android:textSize="@dimen/text_size"
            />
        <ImageView
            android:id="@+id/needy_image"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_create_new_folder_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add media"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_submit_needy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/purple"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/application_volunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="@dimen/text_margin"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/custom_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/application_for_volunteers"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title" />


        <EditText
            android:padding="4dp"
            android:id="@+id/volunteer_fullname"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Full Name"
            android:textSize="@dimen/text_size"
            />
        <EditText
            android:id="@+id/volunteer_age"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="number"
            android:hint="Age"
            android:textSize="@dimen/text_size"
            />
        <EditText
            android:id="@+id/volunteer_"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Reason"
            android:textSize="@dimen/text_size"
            />

        <EditText
            android:id="@+id/volunteer_mobile"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="phone"
            android:maxLines="1"
            android:hint="Mobile number"
            android:textSize="@dimen/text_size"
            />

        <Button
            android:id="@+id/btn_submit_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/purple"
            />
    </LinearLayout>

    <include layout="@layout/autho_layout"/>


</RelativeLayout>